    , SHA                  >=1.6.4  && <1.7
    , text                 >=1.2    && <2.0
    , vector               >=0.12.0 && <0.13

executable zkp
  main-is:            Main.hs
  hs-source-dirs:     exe
  other-modules:
    Prove
    Reference
    Setup
    Verify

  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    GADTs
    OverloadedStrings
    StandaloneDeriving

  ghc-options:
    -Wall -Wno-name-shadowing -threaded -rtsopts -with-rtsopts=-N

