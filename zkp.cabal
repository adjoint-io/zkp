name:               zkp
version:            0.1.0
license:            AllRightsReserved
license-file:       LICENSE
copyright:          2016-2020 Adjoint Inc
maintainer:         stephen@adjoint.io
author:             Adjoint Inc.
homepage:           https://github.com/adjoint-io/zkp#readme
synopsis:           Zero Knowledge Proof Protocol
description:        Zero Knowledge Proof Protocol
category:           Cryptography
build-type:         Simple
extra-source-files:
  README.md
  ChangeLog.md

library
  exposed-modules:    Protocol.Groth
  hs-source-dirs:     src
  other-modules:      Poly
  default-language:   Haskell2010
  default-extensions:
    NoImplicitPrelude
    GADTs
    OverloadedStrings
    StandaloneDeriving

  build-depends:
      aeson                >=1.4.0  && <1.5
